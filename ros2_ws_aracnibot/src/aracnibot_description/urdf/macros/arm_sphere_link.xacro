<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:macro name="arm_sphere_link" params="prefix">
        <link name="${prefix}_arm_sphere_link">
            <visual>
                <geometry>
                    <sphere radius="${sphere_radius}"/>
                </geometry>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <material name="orange"/>
            </visual>
        </link>
    </xacro:macro>

</robot>